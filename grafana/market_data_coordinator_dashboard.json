{
  "dashboard": {
    "title": "Market-Data Coordinator Dashboard",
    "tags": ["market-data", "coordinator", "phase4"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "5s",
    "time": {
      "from": "now-15m",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "type": "gauge",
        "title": "Queue Depth",
        "gridPos": {
          "x": 0,
          "y": 0,
          "w": 6,
          "h": 8
        },
        "targets": [
          {
            "expr": "mds_coord_queue_depth",
            "refId": "A"
          }
        ],
        "options": {
          "showThresholdLabels": true,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 4000, "color": "yellow"},
                {"value": 8000, "color": "red"}
              ]
            },
            "max": 10000,
            "min": 0,
            "unit": "short"
          }
        }
      },
      {
        "id": 2,
        "type": "gauge",
        "title": "Workers Alive",
        "gridPos": {
          "x": 6,
          "y": 0,
          "w": 6,
          "h": 8
        },
        "targets": [
          {
            "expr": "mds_coord_workers_alive",
            "refId": "A"
          }
        ],
        "options": {
          "showThresholdLabels": true,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "yellow"},
                {"value": 4, "color": "green"}
              ]
            },
            "max": 8,
            "min": 0,
            "unit": "short"
          }
        }
      },
      {
        "id": 3,
        "type": "stat",
        "title": "Circuit Breaker State",
        "gridPos": {
          "x": 12,
          "y": 0,
          "w": 6,
          "h": 8
        },
        "targets": [
          {
            "expr": "mds_coord_circuit_state",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "background",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"type": "value", "value": 0, "text": "CLOSED"},
              {"type": "value", "value": 1, "text": "OPEN"},
              {"type": "value", "value": 2, "text": "HALF_OPEN"}
            ],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1, "color": "red"},
                {"value": 2, "color": "yellow"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "type": "stat",
        "title": "Items Submitted (Total)",
        "gridPos": {
          "x": 18,
          "y": 0,
          "w": 6,
          "h": 8
        },
        "targets": [
          {
            "expr": "sum(mds_coord_items_submitted_total)",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        }
      },
      {
        "id": 5,
        "type": "timeseries",
        "title": "Batches Written/sec",
        "gridPos": {
          "x": 0,
          "y": 8,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "rate(mds_worker_batches_written_total[1m])",
            "refId": "A",
            "legendFormat": "{{coord_id}}-worker-{{worker_id}}"
          }
        ],
        "options": {
          "tooltip": {"mode": "multi"},
          "legend": {"displayMode": "list", "placement": "bottom"}
        },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "fillOpacity": 10
            },
            "unit": "ops"
          }
        }
      },
      {
        "id": 6,
        "type": "timeseries",
        "title": "Items Submitted Rate",
        "gridPos": {
          "x": 12,
          "y": 8,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "rate(mds_coord_items_submitted_total[1m])",
            "refId": "A",
            "legendFormat": "{{coord_id}}"
          }
        ],
        "options": {
          "tooltip": {"mode": "multi"},
          "legend": {"displayMode": "list", "placement": "bottom"}
        },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "fillOpacity": 10
            },
            "unit": "ops"
          }
        }
      },
      {
        "id": 7,
        "type": "timeseries",
        "title": "Write Latency (p50, p95, p99)",
        "gridPos": {
          "x": 0,
          "y": 16,
          "w": 24,
          "h": 8
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(mds_worker_write_latency_seconds_bucket[5m]))",
            "refId": "A",
            "legendFormat": "p50"
          },
          {
            "expr": "histogram_quantile(0.95, rate(mds_worker_write_latency_seconds_bucket[5m]))",
            "refId": "B",
            "legendFormat": "p95"
          },
          {
            "expr": "histogram_quantile(0.99, rate(mds_worker_write_latency_seconds_bucket[5m]))",
            "refId": "C",
            "legendFormat": "p99"
          }
        ],
        "options": {
          "tooltip": {"mode": "multi"},
          "legend": {"displayMode": "list", "placement": "bottom"}
        },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 20
            },
            "unit": "s"
          }
        }
      },
      {
        "id": 8,
        "type": "timeseries",
        "title": "Write Errors",
        "gridPos": {
          "x": 0,
          "y": 24,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "rate(mds_worker_write_errors_total[1m])",
            "refId": "A",
            "legendFormat": "{{coord_id}}-{{worker_id}} ({{error_type}})"
          }
        ],
        "options": {
          "tooltip": {"mode": "multi"},
          "legend": {"displayMode": "table", "placement": "bottom"}
        },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "bars",
              "fillOpacity": 100
            },
            "unit": "ops",
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 9,
        "type": "timeseries",
        "title": "Items Dropped",
        "gridPos": {
          "x": 12,
          "y": 24,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "rate(mds_coord_items_dropped_total[1m])",
            "refId": "A",
            "legendFormat": "{{coord_id}} ({{reason}})"
          }
        ],
        "options": {
          "tooltip": {"mode": "multi"},
          "legend": {"displayMode": "table", "placement": "bottom"}
        },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "bars",
              "fillOpacity": 100
            },
            "unit": "ops",
            "color": {"mode": "palette-classic"}
          }
        }
      }
    ]
  }
}
